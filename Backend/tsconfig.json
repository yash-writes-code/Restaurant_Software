{
  "compilerOptions": {
    "module": "ESNext",           // Specifies ES module syntax
    "target": "ES2020",           // Target ECMAScript version
    "moduleResolution": "Node",   // Module resolution for Node.js
    "outDir": "./dist",           // Output directory for compiled JavaScript
    "rootDir": "./src",           // Directory of your TypeScript files
    "esModuleInterop": true,      // Allows default imports for CommonJS modules
    "strict": true,               // Enables all strict type-checking options
    "skipLibCheck": true,         // Skips type-checking of declaration files
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],        // Includes all TS files in the `src` folder
  "exclude": ["node_modules", "dist"]  // Excludes these folders
}